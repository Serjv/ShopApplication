
@{
    ViewBag.Title = "Назначить консультанта";
}
    <div class="modal-body">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("NConsultant", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Назначение консультанта</h4>
            <hr />
            @Html.ValidationSummary()
            <div class="form-group" style="text-indent: 1.5em;">
                @Html.Label("Магазин")
                <br />
                <div class="col-md-10">
                    @Html.DropDownList("Shops")
                </div>
            </div>
            <div class="form-group" style="text-indent: 1.5em;">
                @Html.Label("Консультант")
                <br />
                <div class="col-md-10">
                    @Html.DropDownList("Consultants")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Назначить" />
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Отмена
                    </button>
                </div>
            </div>
        }
    </div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>