@{
    ViewBag.Title = "Добавить консультанта";
}
<div class="modal-body">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("NewConsultant", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Добавление нового консультанта</h4>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group" style="text-indent: 1.5em;">
            @Html.Label("Фамилия консультанта")
            <div class="col-md-10">
                <input name="ConsultantSurname" required />
            </div>
        </div>
        <div class="form-group" style="text-indent: 1.5em;">
            @Html.Label("Имя консультанта")
            <div class="col-md-10">
                <input name="ConsultantName" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Добавить" />
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Отмена
                </button>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>